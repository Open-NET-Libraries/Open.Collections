<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>electricessence</Authors>
    <Company />
    <Product />
    <Description>Useful set of collections, and extensions for collections with thread-safe read-write access options.

Part of the "Open" set of libraries.</Description>
    <PackageLicenseUrl>https://github.com/electricessence/Open.Collections/blob/master/LISCENSE.md</PackageLicenseUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageTags>dotnet, dotnet-core, dotnetcore, cs, collections, extensions, threadsafe, thread-safe, lazylist, memoize, concurrency, concurrenthashset, concurrentlist, ordereddictionary, trackedlist</PackageTags>
    <Copyright>https://github.com/electricessence/Open.Collections/blob/master/LISCENSE.md</Copyright>
    <PackageProjectUrl>https://github.com/electricessence/Open.Collections/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/electricessence/Open.Collections/</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <Version>2.2.0</Version>
    <AssemblyVersion>2.2.0.0</AssemblyVersion>
    <FileVersion>2.2.0.0</FileVersion>
    <PackageReleaseNotes>Updated to .NET Standard for compatability.</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="IIndexed.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Extensions.ConcurrentBag.cs" />
    <None Include="NonGeneric\Extensions.Synchronized.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.4.1" />
    <PackageReference Include="Open.Disposable" Version="1.1.0" />
    <PackageReference Include="Open.Text" Version="1.1.0" />
    <PackageReference Include="Open.Threading" Version="1.3.0" />
    <PackageReference Include="Open.Threading.ReadWrite" Version="1.1.0" />
  </ItemGroup>

</Project>